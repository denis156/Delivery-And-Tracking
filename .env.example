# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME="Delivery and Tracking"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://delivery-and-tracking.test

# Localization for Indonesian system
APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

# ===========================================
# SECURITY & ENCRYPTION
# ===========================================
# Use lower rounds for development (faster), 12 for production
BCRYPT_ROUNDS=10

# ===========================================
# LOGGING
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Default to MySQL for better production compatibility
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=delivery_and_tracking
DB_USERNAME=root
DB_PASSWORD=

# Alternative SQLite for quick setup (uncomment if preferred)
# DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite

# ===========================================
# SESSION & SECURITY
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ===========================================
# BROADCASTING & FILESYSTEM
# ===========================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# ===========================================
# CACHE CONFIGURATION
# ===========================================
CACHE_STORE=database
# CACHE_PREFIX=

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MEMCACHED_HOST=127.0.0.1

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# For development - use log driver or mailhog
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="info@artelia.dev"
MAIL_FROM_NAME="${APP_NAME}"

# Alternative SMTP settings for production:
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your-username
# MAIL_PASSWORD=your-password
# MAIL_ENCRYPTION=tls

# Additional allowed domains (beyond MAIL_FROM_ADDRESS domain)
# Add comma-separated domains in auth config if needed

# ===========================================
# AWS SERVICES (Optional)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
VITE_APP_NAME="${APP_NAME}"

# ===========================================
# ADDITIONAL SECURITY (Production)
# ===========================================
# Uncomment and configure for production deployment:
# FORCE_HTTPS=true
# SECURE_COOKIES=true
# SESSION_SECURE_COOKIE=true
# SANCTUM_STATEFUL_DOMAINS=your-frontend-domain.com

# ===========================================
# MONITORING & DEBUGGING (Optional)
# ===========================================
# TELESCOPE_ENABLED=true
# DEBUGBAR_ENABLED=true

# ===========================================
# DELIVERY & TRACKING SPECIFIC
# ===========================================
# Custom settings for your delivery system
# TRACKING_CODE_LENGTH=8
# DELIVERY_RADIUS_KM=50
# DEFAULT_DELIVERY_TIME_HOURS=24

# ===========================================
# PUSHER (If using real-time features)
